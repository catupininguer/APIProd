@model 			Productos
@{
    ViewData["Title"] = "Agregar Producto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="codigo_barra">Código de Barra</label>
        <input type="number" asp-for="codigo_barra" class="form-control" />
    </div>
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" asp-for="nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label for="marca">Marca</label>
        <input type="text" asp-for="marca" class="form-control" />
    </div>
    <div class="form-group">
        <label for="categoria">Categoría</label>
        <input type="text" asp-for="categoria" class="form-control" />
    </div>
    <div class="form-group">
        <label for="precio">Precio</label>
        <input type="number" step="0.01" asp-for="precio" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>
